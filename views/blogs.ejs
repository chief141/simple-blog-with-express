<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/navbar.ejs") %>
    <div class="blogs-main">
      <% if (data.length > 0){ data.forEach(blog => { %>
      <div class="each-blog">
        <a href="/blogs/<%= blog._id %>" class="blog-title-link">
          <h3 class="blog-title"><%= blog.title %></h3>
          <h5 class="blog-snippet"><%= blog.snippet %></h5>
          <% let date_ = new Date(blog.createdAt); let date_time =
          `${date_.getDate()}/${date_.getMonth()}/${date_.getFullYear()}`; %>
          <h6 class="blog-date"><%= date_time %></h6>
        </a>
      </div>
      <% } ) } else { %>
      <h3 class="no-blogs-show-text">No blogs to show.</h3>
      <% } %>
    </div>
    <%-include("./partials/footer.ejs") %>
  </body>
</html>
